<?js
var data = obj;
var self = this;

var elementId = id
  .replace(/\_/g, '')
  .replace(/\./g, '_P_')
  .replace(/\$/g, 'S');

?>
<dt>
    <h4 class="name" id="<?js= elementId ?>">
      <span class="modifiers-container"><?js= data.attribs ?></span>
      <span class="content"><?js= name ?></span>
      <span class="signature-container"><?js= data.signature ?></span>
    </h4>

    <?js if (data.summary) { ?>
    <p class="summary"><?js= summary ?></p>
    <?js } ?>
</dt>
<dd>
    <?js if (data && data.description) { ?>
    <div class="description">
        <?js= data.description ?>
    </div>
    <?js } ?>

    <?js if (data && data.type && data.type.names) {?>
        <h5>Type:</h5>
        <ul>
            <li>
                <?js= self.partial('type.tmpl', data.type.names) ?>
            </li>
        </ul>
    <?js } ?>

    <?js= this.partial('details.tmpl', data) ?>

    <?js if (data.examples && examples.length) { ?>
        <h5>Example<?js= examples.length > 1? 's':'' ?></h5>
        <?js= this.partial('examples.tmpl', examples) ?>
    <?js } ?>
</dd>
